 function result(){
  var title=document.form.title.value;
  var name1 = document.form.text1.value;
  var name2 = document.form.text3.value;
  var name3 = document.form.text5.value;
  var name4 = document.form.text7.value;
  var name5 = document.form.text9.value;
  var name6= document.form.text11.value;
  var name7= document.form.text13.value;
  var name8= document.form.text15.value;
  var name9= document.form.text17.value;
  var name10= document.form.text19.value;
  var scor1= Number(document.form.text2.value);
  var scor2= Number(document.form.text4.value);
  var scor3= Number(document.form.text6.value);
  var scor4= Number(document.form.text8.value);
  var scor5= Number(document.form.text10.value);
  var scor6= Number(document.form.text12.value);
  var scor7= Number(document.form.text14.value);
  var scor8= Number(document.form.text16.value);
  var scor9= Number(document.form.text18.value);
  var scor10= Number(document.form.text20.value);
 
   const valu = [scor1,scor2,scor3,scor4,scor5,scor6,scor7,scor8,scor9,scor10];
   valu.sort(function(a, b){return a - b});
   valu.reverse();
   largest= valu[0];
   switch(largest){
    case scor1: winnername1=name1;break;
    case scor2: winnername1=name2;break;
    case scor3: winnername1=name3;break;
    case scor4: winnername1=name4;break;
    case scor5: winnername1=name5;break;
    default: winnername1=name6;
   }
  
  print1=name1+" : "+scor1;
  print2=name2+" : "+scor2;
  print3=name3+" : "+scor3;
  print4=name4+" : "+scor4;
  print5=name5+" : "+scor5;
  print6=name6+" : "+scor6;
  print7=name7+" : "+scor7;
  print8=name8+" : "+scor8;
  print9=name9+" : "+scor9;
  print10=name10+" : "+scor10;
  printer = "\n\n"+print1+"\n\n"+print2+"\n\n"+print3+"\n\n"+print4+"\n\n"+print5+"\n\n"+print6+"\n\n"+print7+"\n\n"+print8+"\n\n"+print9+"\n\n"+print10;
  winner= "\n\n\n THE WINNER IS : "+ winnername1+ " { SCORE:"+largest+" }";
   alert(winner+printer);
   
 }
 
