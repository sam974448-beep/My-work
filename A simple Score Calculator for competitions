  function incre()
 {
 var x = prompt("Enter the increment value");
 document.form.but1.value="+"+x;
 document.form.but2.value="+"+x;
 document.form.but3.value="+"+x;
 document.form.but4.value="+"+x;
 document.form.but5.value="+"+x;
 document.form.but6.value="+"+x;
 document.form.but7.value="+"+x;
  document.form.but8.value="+"+x;
 document.form.but9.value="+"+x;
  document.form.but10.value="+"+x;
  var hf=x*(1/2);
  document.form.half1.value=hf;
  document.form.half2.value=hf;
  document.form.half3.value=hf;
  document.form.half4.value=hf;
  document.form.half5.value=hf;
  document.form.half6.value=hf;
  document.form.half7.value=hf;
  document.form.half8.value=hf;
  document.form.half9.value=hf;
  document.form.half10.value=hf;
  
 }
 
 function rest()
 {
  document.form.but1.value="+"+1;
  document.form.but2.value="+"+1;
  document.form.but3.value="+"+1;
  document.form.but4.value="+"+1;
  document.form.but5.value="+"+1;
  document.form.but6.value="+"+1;
  document.form.but7.value="+"+1;
  document.form.but8.value="+"+1;
  document.form.but9.value="+"+1;
  document.form.but10.value="+"+1;
  document.form.half1.value=(1/2);
  document.form.half2.value=(1/2);
  document.form.half3.value=(1/2);
  document.form.half4.value=(1/2);
  document.form.half5.value=(1/2);
  document.form.half6.value=(1/2);
  document.form.half7.value=(1/2);
  document.form.half8.value=(1/2);
  document.form.half9.value=(1/2);
  document.form.half10.value=(1/2);
  document.form.minu1.value=-(1/2);
 document.form.minu2.value=-(1/2);
 document.form.minu3.value=-(1/2);
 document.form.minu4.value=-(1/2);
 document.form.minu5.value=-(1/2);
 document.form.minu6.value=-(1/2);
 document.form.minu7.value=-(1/2);
 document.form.minu8.value=-(1/2);
 document.form.minu9.value=-(1/2);
 document.form.minu10.value=-(1/2);
  
 }
 
